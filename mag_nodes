#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_LSM303_U.h>

/* Assign a unique ID to this sensor at the same time */
Adafruit_LSM303_Mag_Unified mag = Adafruit_LSM303_Mag_Unified(12345);

void displaySensorDetails(void)
{
  sensor_t sensor;
  mag.getSensor(&sensor);
  Serial.println("------------------------------------");
  Serial.print  ("Sensor:       "); Serial.println(sensor.name);
  Serial.print  ("Driver Ver:   "); Serial.println(sensor.version);
  Serial.print  ("Unique ID:    "); Serial.println(sensor.sensor_id);
  Serial.print  ("Max Value:    "); Serial.print(sensor.max_value); Serial.println(" uT");
  Serial.print  ("Min Value:    "); Serial.print(sensor.min_value); Serial.println(" uT");
  Serial.print  ("Resolution:   "); Serial.print(sensor.resolution); Serial.println(" uT");
  Serial.println("------------------------------------");
  Serial.println("");
  delay(500);
}

void setup(void)
{
#ifndef ESP8266
  while (!Serial);     // will pause Zero, Leonardo, etc until serial console opens
#endif
  Serial.begin(9600);
  Serial.println("Magnetometer Test"); Serial.println("");

  /* Enable auto-gain */
  mag.enableAutoRange(true);

  /* Initialise the sensor */
  if(!mag.begin())
  {
    /* There was a problem detecting the LSM303 ... check your connections */
    Serial.println("Ooops, no LSM303 detected ... Check your wiring!");
    while(1);
  }

  /* Display some basic information on this sensor */
  displaySensorDetails();
}

void loop(void)
{
  /* Get a new sensor event */
  sensors_event_t event;
  mag.getEvent(&event);

  //Calculate the angle of the vector y,x
  //atan2 to get the angle in radians, then convert to degrees

float heading = atan2(event.magnetic.y, event.magnetic.x) * 180 / M_PI;
if (heading < 0){
  heading+=360;
}

Serial.print("heading: "); Serial.print(heading); Serial.print(" | Direction: ");

//map the 4 quadrants
// these ranges assume front is north (0)
// adjust according to sensor mount

if (heading >= 315 || heading < 45){
  Serial.println("FRONT (North)");
} else if (heading >=45 && heading < 135) {
  Serial.println("RIGHT (East)");
} else if (heading >=135 && heading < 225) {
  Serial.println("BACK (South)");
} else if (heading >=225 && heading < 315) {
  Serial.println("LEFT (West)");
}

  /* Delay before the next sample */
  delay(500);
}
